div {{status}}
.row
    div(class="col-md-3 col-md-offset-2", ng-show="record.id")
        p.text-right id:
        p.text-right URL:
    div(class="col-md-3 col-md-offset-4", ng-hide="record.id")
        p No rows in table with empty Terms of Services.
        p
            a(href="/" class="btn btn-primary") Return
    div(class="col-md-3", ng-show="record.id")
        p.text-left {{record.id}}
        p.text-left 
            a(href="{{record.main_url}}", target="_blank") {{record.main_url}}
        form(role="form" action="/api/add" method="post")
            div(class="form-group")
                label(for="id") ID
                input(type="text" class="form-control" id="id" name="id" value="{{record.id}}")
            div(class="form-group")
                label(for="main_url") Newspaper URL
                input(type="text" class="form-control" id="main_url" name="main_url" value="{{record.main_url}}")
            div(class="form-group")
                label(for="tos_url") Terms of Service URL
                input(type="text" class="form-control" id="tos_url" name="tos_url")
            div(class="form-group")
                label(for="tos_html") Terms of Service HTML
                textarea(class="form-control" id="tos_html" name="tos_html")
            div(class="form-group")
                label(for="tos_html") Terms of Service Text
                textarea(class="form-control" id="tos_clean" name="tos_clean")
            button(type="submit" class="btn btn-default") Submit
           